{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirect":[
      {
        "source": "/post",
        "destination": "/",
        "type":301
      }
    ],
    "rewrite": [
      {
        "source0": "/**",
        "destination": "/index.html"
      }
    ],
    "headers":[
      {
        "sources": "/**/*.@(jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      }
    ]
  }
}
